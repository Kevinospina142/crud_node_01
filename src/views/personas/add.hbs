<div class="conatiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">CREAR NUEVA PERSONA</h3>
                </div>
                <div class="card-body">
                    <form action="/add" method="post">
                    <div class="input-group mt-2">
                        <label for="name" class="input-group-text">Nombre</label>
                        <input class="form-control" type="text" name="name" id="name" placeholder="Ejemplo: Luis Angel" autofocus required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="name" class="input-group-text">Apellido</label>
                        <input class="form-control" type="text" name="lastname" id="lastname" placeholder="Ejemplo: Fernandez" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="name" class="input-group-text">Edad</label>
                        <input class="form-control" type="number" name="age" id="age" placeholder="0" required>
                    </div>
                    <div class="input-group mt-2">
                            <label for="Tipo_Persona" class="input-group-text">Tipo de persona</label>
                            <select class="form-select" name="Tipo_Persona" aria-label="Default select example" required>
                                <option selected>Seleccione tipo de persona</option>
                                {{#if tipos_persona}}
                                    {{#each tipos_persona}}
                                    <option value="{{id_TP}}" >{{rol}}</option>
                                    {{/each}}
                                {{else}}
                                <option >No existen roles en la tabla...</option>
                                {{/if}}
                            </select>
                        </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success"> Crear</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>